<view class="{{('wx-verify-bg '+(isShow?'show':''))}}"><view class="wx-mask"></view><text class="verify-title">{{title}}</text><text class="verify-content">{{content+phone}}</text><view data-event-opts="{{[['tap',[['openKeyboard',['$event']]]]]}}" class="verify-code-view" catchTap="__e"><view class="{{('verify-input-view '+(index==0?'verify-input-view-first':''))}}" a:for="{{codes}}" a:for-item="code" a:for-index="index" a:key="index"><text class="verify-text">{{code}}</text></view><input class="key-input" type="number" adjust-position="false" confirm-type="done" focus="{{isFocus}}" data-event-opts="{{[['input',[['listenKeyInput',['$event']]]]]}}" value="{{inputValue}}" onInput="__e"/></view><text data-event-opts="{{[['tap',[['againSendAction',['$event']]]]]}}" class="again-send-class" style="{{('color:'+againSendTextColor)}}" catchTap="__e">{{againSendText}}</text></view>