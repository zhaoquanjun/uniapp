<view class="pay-detail--page"><view class="title">合同主题</view><view class="desc">{{title}}</view><block a:if="{{paidList}}"><view class="title">支付信息</view></block><view class="info-list" a:for="{{paidList}}" a:for-item="item" a:for-index="index" a:key="index"><view class="list-item"><view class="label">付款方</view><view class="value">{{item.payerName}}</view></view><view class="list-item"><view class="label">支付时间</view><view class="value">{{item.gmtModified}}</view></view><view class="list-item"><view class="label">支付金额</view><view class="value">{{"¥ "+item.amount}}</view></view></view><block a:if="{{unpaidList}}"><view class="title">等待付款</view></block><view class="info-list" a:for="{{unpaidList}}" a:for-item="item" a:for-index="index" a:key="index"><view class="list-item"><view class="label">{{item.payerName}}</view><view class="value">{{"¥ "+item.amount}}</view></view></view></view>