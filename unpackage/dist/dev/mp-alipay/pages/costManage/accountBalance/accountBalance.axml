<view class="balance-list--page"><view class="header-tab"><view class="{{('tab-item '+(activeName==item.type?'active':''))}}" data-type="{{item.type}}" data-event-opts="{{[['tap',[['handleSwitchTabFun',['$event']]]]]}}" onTap="__e" a:for="{{tabs}}" a:for-item="item" a:for-index="index" a:key="index">{{item.name}}</view><view class="{{('active-bg '+(activeName==2?'focus':''))}}"></view></view><view class="content"><scroll-view class="scroll-area" scroll-y="true" scroll-anchoring="true" data-event-opts="{{[['scrollToLower',[['handleScrollToBottmFun',['$event']]]]]}}" onScrollToLower="__e"><block a:if="{{activeName==1}}"><view class="pay-list balance-list"><view class="list-item" a:for="{{payList}}" a:for-item="item" a:for-index="index" a:key="index"><view class="top"><view class="name">{{item.consumptionTypeText}}</view><view class="money">{{"- "+item.consumptionMoney}}</view></view><view class="bot"><view class="time">{{"支出时间："+item.consumptionTime}}</view><view class="type">{{item.deductionName}}</view></view></view></view></block><block a:if="{{activeName==2}}"><view class="income-list balance-list"><view class="list-item" a:for="{{incomeList}}" a:for-item="item" a:for-index="index" a:key="index"><view class="top"><view class="name">{{item.consumptionTypeText}}</view><view class="money">{{"+ "+item.consumptionMoney}}</view></view><view class="bot"><view class="time">{{"收入时间："+item.consumptionTime}}</view><view class="type">{{item.deductionName}}</view></view></view></view></block><view class="{{('loading '+(isRefresh?'show':''))}}">加载中...</view></scroll-view></view><view class="btn-groups"><view data-event-opts="{{[['tap',[['handleReadyToChargeFun',['$event']]]]]}}" class="recharge btn" onTap="__e">账户充值</view><view data-event-opts="{{[['tap',[['handleReadyToSendFun',['$event']]]]]}}" class="send btn" onTap="__e">赠送好友</view></view></view>