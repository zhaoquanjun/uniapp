
.a-page {
  background-color: #f5f5f5;
}
view {
  box-sizing: border-box;
}
.recharge-page .recharge-account {
  margin: 16rpx 0;
  padding: 48rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-color: #fff;
}
.label {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #333;
}
.value {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #333;
}
.recharge-page .recharge-amount--section {
  padding: 0 48rpx;
  background-color: #fff;
}
.recharge-page .recharge-amount--section .amount-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
}
.recharge-amount--section .amount-list .list-area {
  padding: 44rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.amount-list .list-area .list-item {
  margin-left: 20rpx;
  padding: 8rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  line-height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
}
.amount-list .list-area .list-item.active {
  color: #ED6C00;
  border-color: #ED6C00;
}
.recharge-amount--section .amount-input--area {
  position: relative;
  padding: 44rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}
.amount-input--area input {
  padding-right: 48rpx;
  text-align: right;
  font-size: 28rpx;
  color: #333;
  line-height: 28rpx;
}
.amount-input--area .prefix {
  position: absolute;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  font-size: 28rpx;
  line-height: 28rpx;
  color: #333;
}
.amount-input--area input::-webkit-input-placeholder {
  font-size: 28rpx;
  color: #999;
  line-height: 28rpx;
}
.amount-input--area input::placeholder {
  font-size: 28rpx;
  color: #999;
  line-height: 28rpx;
}
.recharge-amount--section .total-area {
  padding: 46rpx 0 48rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.confirm-btn {
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  bottom: 80rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: calc(100% - 96rpx);
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  background-color: #464646;
}

