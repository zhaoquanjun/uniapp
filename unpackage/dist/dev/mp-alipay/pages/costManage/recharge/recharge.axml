<view class="recharge-page"><view class="recharge-account"><text class="label">充值账户</text><text class="value">{{userName}}</text></view><view class="recharge-amount--section"><view class="amount-list"><view class="label">面值金额</view><view class="list-area"><view class="{{('list-item '+(selectActive==item.value&&valueStatus=='select'?'active':''))}}" data-value="{{item.value}}" data-event-opts="{{[['tap',[['handleSelectValueFun',['$event']]]]]}}" onTap="__e" a:for="{{amountList}}" a:for-item="item" a:for-index="index" a:key="index">{{item.label}}</view></view></view><view class="amount-input--area"><input placeholder="请输入10～1000整数" type="number" data-event-opts="{{[['input',[['handleInputValueFun',['$event']]]],['focus',[['handleFocusFun',['$event']]]]]}}" onInput="__e" onFocus="__e"/><view class="prefix">元</view></view><view class="total-area"><view class="label">总金额</view><view class="value">{{"¥ "+total}}</view></view></view><view data-event-opts="{{[['tap',[['handleConfirmRechargeFun',['$event']]]]]}}" class="confirm-btn" onTap="__e">确认充值</view></view>