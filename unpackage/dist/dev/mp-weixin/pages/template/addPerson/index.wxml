<view class="add-person--page"><view class="title">输入信息</view><view class="value-list"><view class="list-item"><text class="sub-tit">姓名</text><input type="text" placeholder="请输入" data-event-opts="{{[['input',[['handleInputUserNameFun',['$event']]]],['blur',[['handleBlurUserNameFun',['$event']]]]]}}" value="{{name}}" bindinput="__e" bindblur="__e"/><view class="{{['suggest-list '+(suggests?'show':'')]}}"><block wx:for="{{suggests}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="item" data-item="{{item}}" data-event-opts="{{[['tap',[['_handleSelectSuggest',['$event']]]]]}}" catchtap="__e">{{item.name+" - "+item.phone}}</view></block></view></view><view class="list-item"><text class="sub-tit">账号</text><input type="number" maxlength="11" placeholder="请输入" data-event-opts="{{[['input',[['handleInputUserPhoneFun',['$event']]]]]}}" value="{{phone}}" bindinput="__e"/></view></view><view class="btn-group"><view class="cancel" ontap="_handleBack">撤回</view><view class="{{['confirm '+(canNext?'canNext':'')]}}" ontap="_handleConfirm">确定</view></view></view>