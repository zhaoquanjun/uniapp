.sign-certificate-box {
  font-size:24rpx;
  padding:30rpx;
  position: relative;
  width: 100vw;
  height:100vh;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.sign-certificate-description text {
  color:#969696;
}
.sign-certificate-box .sign-certificate-name {
  font-size:28rpx;
  line-height:28rpx;
  margin-bottom:30rpx;
}
.sign-certificate-box>input {
  height:88rpx;
  background:rgba(255,255,255,1);
  -webkit-box-shadow:0rpx 4rpx 14rpx 0 rgba(153,153,153,0.2);
          box-shadow:0rpx 4rpx 14rpx 0 rgba(153,153,153,0.2);
  -webkit-border-radius:8rpx;
          border-radius:8rpx;
  font-size:28rpx;
  margin-bottom: 30rpx;
  padding-left:16rpx;
}
.sign-certificate-type {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  height:174rpx;
  background:rgba(255,255,255,1);
  -webkit-border-radius:8rpx;
          border-radius:8rpx;
  padding: 22rpx 30rpx 0 30rpx;
  margin-bottom:30rpx;
}
.sign-certificate-type radio .wx-radio-input{ 
  /* 自定义样式.... */
    height: 28rpx; 
    width: 28rpx;
    margin-top: -4rpx;
    -webkit-border-radius: 50%;
            border-radius: 50%;
    border: 2rpx solid #999;
    background: transparent;
    font-weight:500;
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
.sign-certificate-type radio .wx-radio-input.wx-radio-input-checked{
   border: none;
   background: #ed6c00;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
.sign-certificate-type radio .wx-radio-input.wx-radio-input-checked::before{
   -webkit-border-radius: 50%;
           border-radius: 50%;/* 圆角 */
   width: 28rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   height: 28rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 28rpx;
   text-align: center;
   font-size:20rpx; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: #ed6c00;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
.sign-certificate-type .label-text {
  height:40rpx;
  margin-left: 12rpx;
  margin-top:1rpx;
  line-height: 40rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.sign-certificate-type .label-detail{
  margin-top:10rpx;
  color:#999999FF;
  line-height:40rpx;
  margin-left: 48rpx;
  font-size: 24rpx;
}
.sign-certificate-box .sign-certificate-description>view{
  height:40rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
  margin-left:8rpx;
}
.sign-certificate-box .sign-certificate-add{
  width: 690rpx;
  height:80rpx;
  background:#464646;
  -webkit-border-radius:4px;
          border-radius:4px;
  position: absolute;
  bottom:20rpx;
  font-size:32rpx;
  line-height: 80rpx;
  text-align: center;
  color:#fff;
}

