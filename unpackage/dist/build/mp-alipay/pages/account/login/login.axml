<view><image class="login-bg" src="{{loginBgSrc}}"></image><text class="login-title">{{loginTitle}}</text><block a:if="{{!isBindOpenId}}"><button class="btn" open-type="getAuthorize" scope="phoneNumber" data-event-opts="{{[['getAuthorize',[['$onAliGetAuthorize',['getPhoneNumber','$event']]]],['error',[['$onAliAuthError',['getPhoneNumber','$event']]]]]}}" onGetAuthorize="__e" onError="__e">{{quickLoginTitle}}</button></block><block a:if="{{isBindOpenId}}"><button data-event-opts="{{[['tap',[['handleLoginByPhoneFun',['$event']]]]]}}" class="btn" catchTap="__e">{{quickLoginTitle}}</button></block><view class="mark-view" hidden="{{!isShowMark}}"><view class="mark-content-view global-shadow"><input class="mark-phone-input" placeholder="请输入手机号码" type="number" data-event-opts="{{[['input',[['bindKeyInput',['$event']]]]]}}" value="{{loginPhone}}" onInput="__e"/><view data-event-opts="{{[['tap',[['bindPhoneAction',['$event']]]]]}}" class="mark-btn" catchTap="__e">确认绑定此号码</view></view></view></view>