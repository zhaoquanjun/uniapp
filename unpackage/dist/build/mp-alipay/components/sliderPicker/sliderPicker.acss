.slider-picker--area{position:fixed;top:0;left:0;width:100%;height:100%;display:none;z-index:39}.wrapper-show{display:block}.slider-picker--area .mask{position:absolute;top:0;left:0;width:100%;height:100%;background-color:rgba(0,0,0,.5)}.slider-picker--area .slider-box{position:absolute;left:0;bottom:0;-webkit-transform:translateY(100%);transform:translateY(100%);padding:10rpx 48rpx;width:100%;background-color:#fff;-webkit-transition:all .2s ease-in-out;transition:all .2s ease-in-out;-webkit-box-sizing:border-box;box-sizing:border-box}.slider-picker--area .slider-box.content-show{-webkit-transform:translateY(0);transform:translateY(0)}.slider-picker--area .slider-box .slider-item{width:100%;height:104rpx;line-height:104rpx;text-align:center;border-bottom:2rpx solid #e6e6e6;font-size:32rpx;color:#212121}.slider-picker--area .slider-box .slider-item:last-of-type{color:#999;border-bottom:none}