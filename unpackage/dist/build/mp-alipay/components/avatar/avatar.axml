<view class="avatar-box"><block a:if="{{(!serverAvatarUrl||serverAvatarUrl.length<=0)&&(!localAvatarName||localAvatarName.length<=0)}}"><view class="avatar-default"><image class="avatar-bg" src="https://shouyiner-prod.oss-cn-beijing.aliyuncs.com/wxapp/shanqian/account/avatar_bg_icon.png"></image><view class="avatar-text-box"><view class="avatar-text" style="{{('font-size:'+fontSize)}}">{{text}}</view></view></view></block><block a:if="{{serverAvatarUrl&&serverAvatarUrl.length>0||localAvatarName&&localAvatarName.length>0}}"><image class="avatar-custom" src="{{serverAvatarUrl&&serverAvatarUrl.length>0?serverAvatarUrl:localAvatarName}}"></image></block></view>